<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:background="#0626f7"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/detail_title"
            android:text="Title"
            android:padding="10dp"
            android:textColor="#000000"
            android:background="#f9e8ca"
            android:textSize="35sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="#ffffff"
            android:layout_height="wrap_content">


                <ImageView

                    android:id="@+id/detail_poster_image"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="270dp" />



            <LinearLayout
                android:layout_weight="2"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="0dp"

                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/detail_release_year"
                    android:text="2020"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="#444444"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/detail_rate"
                    android:text="7.91 / 10"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#555555"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:text="Fav. / Un-Fav."
                    android:textAllCaps="false"
                    android:id="@+id/detail_favourite_btn"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:background="#0077ff"
                    android:textColor="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:text="Overview:"
            android:textStyle="bold"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/detail_overview"
            android:text="Overview:"
            android:padding="10dp"
            android:background="#e3dad1"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:text="Trailers:"
            android:textStyle="bold"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView

            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:id="@+id/trailers"
            android:layout_height="110dp"></ListView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/empty_trailers"
            android:background="#ffffff"
            android:textColor="#FF0000"
            android:visibility="gone"
            android:paddingBottom="20dp"
            android:text="@string/no_trailers"
            android:textSize="15dp"
            android:gravity="center" />

        <TextView
            android:text="Reviews:"
            android:textStyle="bold"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:id="@+id/reviews"
            android:layout_height="160dp"></ListView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/empty_review"
            android:background="#ffffff"
            android:textColor="#FF0000"
            android:visibility="gone"
            android:paddingBottom="20dp"
            android:text="@string/no_reviews"
            android:textSize="15dp"
            android:gravity="center" />




    </LinearLayout>


</ScrollView>